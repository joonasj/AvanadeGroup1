@model IssueReportManagementTest.ViewModel.ReportIssueViewModel

@{
    ViewBag.Title = "Report";
}
<img src="../../Content/media/graphics/printer_48.png" style="float: right; cursor:pointer;" class="hide-printer" onload="showPrinter()" onclick="printDiv('print-issue-report')" title="Print the reports"/>
<div id="print-issue-report">
@foreach (var item in Model.report_issues)
{
    <div class="issue-report">
        <p>Title: @item.cissue.Title</p>
        <p>Added: @item.cissue.Added.ToString("dd.MM.yy")</p>
        <p>Last modification: @item.cissue.Modiefied.ToString("dd.MM.yy")</p>
        <p>State:  @{
                switch (item.cissue.State)
                {
                    case 0:
                        <text>Not started</text>
                    break;
                    case 1:
                        <text>Started</text>
                    break;
                    case 2:
                        <text>Waiting</text>
                    break;
                    case 3:
                        <text>Resolved</text>
                    break;
                    case 4:
                        <text>Closed</text>
                    break;
                    default:
                        <text>Error</text>
                    break;
                }
            }</p>
        <p>Number of activities: @item.cactivities.Count()</p>
    </div>
}
</div>
