@model IssueReportManagementTest.Models.Activity

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Activity</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Added)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Added)
            @Html.ValidationMessageFor(model => model.Added)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Employee)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Employee)
            @Html.ValidationMessageFor(model => model.Employee)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Context)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Context)
            @Html.ValidationMessageFor(model => model.Context)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.IssueID, "Issue")
        </div>
        <div class="editor-field">
            @Html.DropDownList("IssueID", String.Empty)
            @Html.ValidationMessageFor(model => model.IssueID)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
