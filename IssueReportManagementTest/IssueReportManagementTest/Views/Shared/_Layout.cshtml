<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta name="description" content="Issue report management" />
	<meta name="keywords" content="issue, report, management, avanade" />
	<meta name="author" content="Joonas Jauhiainen" />
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/default2.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/main_menu2.css")" rel="stylesheet" type="text/css" />
    <!--<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />-->
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/Scripts/avanade_scripts.js")" type="text/javascript"></script>
    <!--<script src="http://code.jquery.com/jquery-latest.js" type="text/javascript"></script>-->
    <script type="text/javascript">
        function showPrinter() {
            $(".hide-printer").removeClass("hide-printer");
        }

        function hideArchive() {
            $("#archived-issues").addClass("hide-archived");
        }

        function printDiv(divName) {
            var printContents = document.getElementById(divName).innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;

            window.print();

            document.body.innerHTML = originalContents;
        }

    </script>
</head>
<body>
	<div id="content">
		<div id="toolbar">
        @if (Request.IsAuthenticated)
        {<p id="toolbar-welcome">Welcome <b>@User.Identity.Name</b>!</p>}
			@RenderPage("../Shared/_LogoutPartial.cshtml")
		</div>
		<div id="header">
			
		</div>
		<div id="main_nav">
            @RenderPage("../Shared/_ToolsPartial.cshtml")
		</div>
		<div id="content_container">
			<section>
            @RenderBody()
            </section>
		</div>
	</div>
</body>
</html>

